---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ site.title }}</title>
    <link>https://www.apple.com/itunes/podcasts/</link>
    <language>en-us</language>
    <copyright>&#169; {{ site.copyright }}</copyright>
    <itunes:author>{{ site.author }}</itunes:author>
    <description>
      {{ site.description }}
    </description>
    <itunes:type>serial</itunes:type>
    <itunes:owner>
      <itunes:name>{{ site.title }}</itunes:name>
    </itunes:owner>
    <itunes:image
      href="https://applehosted.podcasts.apple.com/hiking_treks/artwork.png"
    />
    <itunes:category text="Sports">
      <itunes:category text="Wilderness"/>
    </itunes:category>
    <itunes:explicit>false</itunes:explicit>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for post in site.posts %}
      {% if post.audio %}
        <item>
          <itunes:episodeType>full</itunes:episodeType>
          <itunes:title>{{ post.title }}</itunes:title>
          <description>{{ post.description }}</description>
          <enclosure
            length="498537"
            type="audio/mpeg"
            url="{{ site.url }}{{ site.baseurl }}{{ post.audio }}"
          />
          <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
          <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
          <itunes:duration>1079</itunes:duration>
          <itunes:explicit>false</itunes:explicit>
        </item>
      {% endif %}
    {% endfor %}
  </channel>
</rss>
